{
  "manifest_version": 3,
  "name": "IP Guard",
  "version": "1.4.0",
  "description": "Monitor and verify your public IP address matches your target IP",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://api.ipify.org/*",
    "https://api64.ipify.org/*",
    "https://icanhazip.com/*",
    "https://api.my-ip.io/*",
    "https://ipapi.co/*",
    "https://ipinfo.io/*",
    "https://1.1.1.1/*",
    "https://checkip.amazonaws.com/*"
  ]
}
